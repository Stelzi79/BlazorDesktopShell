<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <LangVersion>8.0</LangVersion>
        <Nullable>enable</Nullable>
        <MinVerVerbosity>normal</MinVerVerbosity>
        <RootNamespace>BlazorDesktopShell</RootNamespace>
        <WarningsAsErrors>CS8600;CS8602;CS8603</WarningsAsErrors>
        <LocalPackageSource>$(SolutionDir)..\.nupkg</LocalPackageSource>
        <SuppressNETCoreSdkPreviewMessage>true</SuppressNETCoreSdkPreviewMessage>
        <Authors>Wolfgang Stelzhammer</Authors>
        <Company>Stelzi79</Company>
        <Product>BlazorDesktopShell</Product>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageProjectUrl>https://github.com/Stelzi79/BlazorDesktopShell</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Stelzi79/BlazorDesktopShell.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>Blazor Chromium BlazorDesktopShell bds</PackageTags>
        <Copyright>Stelzi79</Copyright>
    </PropertyGroup>


    <ItemGroup>
        <ProjectCapability Include="DynamicDependentFile" />
        <ProjectCapability Include="DynamicFileNesting" />
    </ItemGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Debug'">

        <!--Enables the Target Pack only on Debug-->

        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="MinVer" Version="1.1.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
      <None Include="..\..\LICENSE">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
      </None>
    </ItemGroup>



    <Target Name="nuget-add-to-local-source" AfterTargets="Pack" Condition="'$(Configuration)'=='Debug'">
        <PropertyGroup>
            <PackedNupkg>$(OutputPath)..\$(PackageId).$(PackageVersion).nupkg</PackedNupkg>
            <InstalledPackagePath>$(LocalPackageSource)\$(PackageId)\$(PackageVersion)</InstalledPackagePath>
        </PropertyGroup>
        <Message Importance="high" Text="Check if '$(InstalledPackagePath)' exists and deletes it ..." />
        <RemoveDir Condition="Exists('$(InstalledPackagePath)')" Directories="$(InstalledPackagePath)" />
        <Message Importance="high" Text="Adding Package '$(PackedNupkg)' into the local Package source '$(LocalPackageSource)' ..." />
        <Exec Command="nuget add &quot;$(PackedNupkg)&quot; -Source &quot;$(LocalPackageSource)&quot; -NonInteractive -Verbosity detailed" />
    </Target>

</Project>
